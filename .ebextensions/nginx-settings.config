files:
  "/etc/nginx/conf.d/types_hash.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      types_hash_max_size 4096;
      types_hash_bucket_size 128;

packages:
  yum:
    python3: []

container_commands:
  01_install_awscliv2:
    command: "pip3 install awscliv2"

  02_setup_nginx:
    command: |
      echo '
      server {
          # Serve static files
          location /static/ {
              alias /var/app/current/static/;
          }
      }
      ' > /etc/nginx/conf.d/flask_app.conf